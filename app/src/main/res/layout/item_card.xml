<?xml version="1.0" encoding="utf-8"?>
<com.uiLibrary.bobbleLibrary.BobbleCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/second_card"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.uiLibrary.bobbleLibrary.BobbleImage
            android:id="@+id/img"
            android:layout_width="wrap_content"
            app:translationZImage1="2dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:fontFamily="@font/b612_mono"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            tools:text="text" />

    </LinearLayout>

</com.uiLibrary.bobbleLibrary.BobbleCardView>